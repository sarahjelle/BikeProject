<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane stylesheets="@BikePane.css" fx:id="bikePane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="myapp.GUIfx.Bike.BikePaneController">
   <top>
      <HBox fx:id="topMenu">
          <TextField text="Bike id" fx:id="searchInput" prefHeight="20"/>
          <Button onAction="#openBike" prefHeight="20">
              <graphic>
                  <ImageView fitHeight="15" fitWidth="15">
                      <Image url="@../Images/Search.png" />
                  </ImageView>
              </graphic>
          </Button>
      </HBox>
   </top>
   <center>
      <AnchorPane BorderPane.alignment="CENTER">
            <fx:include fx:id="centerPane" source="BikeCenterPane.fxml" visible="true" AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.bottomAnchor="0"/>
      </AnchorPane>
   </center>
   <bottom>
      <HBox fx:id="buttomBar">
          <Button onAction="#openRegBike"  text="+ Register new" GridPane.columnIndex="3" />
          <Region HBox.hgrow="ALWAYS"/>
      </HBox>
   </bottom>
</BorderPane>
